/* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background-color: #f5f5f5;
    color: #333;
    line-height: 1.6;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

/* Header Styles */
header {
    text-align: center;
    padding: 40px 20px;
    background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    color: white;
    border-radius: 12px;
    margin-bottom: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

header h1 {
    font-size: 2.5em;
    font-weight: 700;
    margin-bottom: 10px;
}

.subtitle {
    font-size: 1.1em;
    opacity: 0.9;
    font-weight: 300;
}

/* Global Controls */
.controls-global {
    background: white;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    gap: 15px;
    flex-wrap: wrap;
}

.controls-global label {
    font-weight: 500;
    color: #555;
    font-size: 1.1em;
}

.controls-global select {
    padding: 10px 15px;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 15px;
    background-color: white;
    cursor: pointer;
    transition: border-color 0.3s;
}

.controls-global select:hover {
    border-color: #2a5298;
}

.controls-global select:focus {
    outline: none;
    border-color: #1e3c72;
}

#refreshAllBtn {
    padding: 10px 20px;
    background-color: #2a5298;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 15px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s;
    margin-left: auto;
}

#refreshAllBtn:hover {
    background-color: #1e3c72;
}

#refreshAllBtn:active {
    transform: scale(0.98);
}

/* Momentum Section */
.momentum-section {
    background: white;
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border: 2px solid #1e3c72;
}

/* Growth Rate Section */
.growth-section {
    background: white;
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border: 2px solid #2E7D32;
}

.momentum-section .chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
    gap: 15px;
}

.growth-section .chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
    gap: 15px;
}

.momentum-section .chart-header h2,
.growth-section .chart-header h2 {
    font-size: 1.6em;
    color: #1e3c72;
    font-weight: 600;
    flex: 1;
    min-width: 300px;
}

.growth-section .chart-header h2 {
    color: #2E7D32;
}

.chart-controls {
    display: flex;
    align-items: center;
    gap: 15px;
    flex-wrap: wrap;
}

.baseline-info {
    font-size: 0.95em;
    color: #666;
    font-weight: 500;
    background-color: #f0f4f8;
    padding: 8px 16px;
    border-radius: 6px;
}

.control-group {
    display: flex;
    align-items: center;
    gap: 8px;
}

.control-group label {
    font-size: 0.9em;
    color: #555;
    font-weight: 500;
}

.control-group select {
    padding: 6px 12px;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
    background-color: white;
    cursor: pointer;
    transition: border-color 0.3s;
}

.control-group select:hover {
    border-color: #2a5298;
}

.control-group select:focus {
    outline: none;
    border-color: #1e3c72;
}

/* Deprecated - keeping for backwards compatibility */
.momentum-info {
    font-size: 0.95em;
    color: #666;
    font-weight: 500;
    background-color: #f0f4f8;
    padding: 8px 16px;
    border-radius: 6px;
}

.chart-container-large {
    width: 100%;
    height: 550px;
    border-radius: 8px;
    overflow: hidden;
}

/* Main Content */
main {
    background: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Chart Section */
.chart-section {
    margin-bottom: 50px;
    padding-bottom: 30px;
    border-bottom: 1px solid #e0e0e0;
}

.chart-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
    gap: 15px;
}

.chart-header h2 {
    font-size: 1.5em;
    color: #1e3c72;
    font-weight: 600;
}

.refresh-btn {
    padding: 6px 14px;
    background-color: #e0e0e0;
    color: #333;
    border: none;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
}

.refresh-btn:hover {
    background-color: #2a5298;
    color: white;
}

.refresh-btn:active {
    transform: scale(0.98);
}

/* Chart Container */
.chart-container {
    width: 100%;
    height: 450px;
    border-radius: 8px;
    overflow: hidden;
}

/* Loading and Error States */
.loading {
    text-align: center;
    padding: 60px 20px;
    font-size: 1.2em;
    color: #666;
}

.loading::after {
    content: '...';
    animation: dots 1.5s steps(4, end) infinite;
}

@keyframes dots {
    0%, 20% { content: '.'; }
    40% { content: '..'; }
    60%, 100% { content: '...'; }
}

.error {
    background-color: #ffebee;
    color: #c62828;
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid #c62828;
    margin: 20px 0;
}

/* Data Source Info */
.data-source {
    font-size: 0.85em;
    color: #666;
    margin-top: 10px;
    padding: 8px 12px;
    background-color: #f8f8f8;
    border-left: 3px solid #2a5298;
    border-radius: 4px;
}

/* Footer */
footer {
    text-align: center;
    padding: 30px 20px;
    color: #666;
    font-size: 0.9em;
}

footer a {
    color: #2a5298;
    text-decoration: none;
    font-weight: 500;
}

footer a:hover {
    text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 768px) {
    header h1 {
        font-size: 1.8em;
    }

    .subtitle {
        font-size: 1em;
    }

    .controls-global {
        flex-direction: column;
        align-items: flex-start;
    }

    #refreshAllBtn {
        margin-left: 0;
        width: 100%;
    }

    .chart-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .chart-header h2 {
        font-size: 1.3em;
    }

    .chart-container {
        height: 350px;
    }

    .chart-container-large {
        height: 400px;
    }

    .momentum-section .chart-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .growth-section .chart-header {
        flex-direction: column;
        align-items: flex-start;
    }

    main {
        padding: 20px;
    }
}